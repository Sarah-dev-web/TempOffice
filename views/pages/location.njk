{% extends "layout/index.njk" %}
{% block css %}
  <link rel="stylesheet" href="/static/styles/location.css">
{% endblock %}
{% block beforeContainer %}{% endblock %}

{% block content %}
  <div class="flex-row">
    {# <div class="card-deck" style="max-width: 18rem;"> #}
    <div class="d-flex justify-content-center flex-wrap">
      {% for annonce in annonces %}
        <div class="card border-info p-1 m-1 mt-4 shadow-lg" style="width: 16rem;">
          {% if annonce.image %}
              <img class="card-img-top" src="{{annonce.image}}" alt="{{annonce.titre}} cover">
          {%else%}
              <img src="https://www.tu-chemnitz.de/physik/TPSM/bilder/noimageavailable.png" class="card-img-top" alt="Pas d'image">
          {%endif%}

            <div class="card-body">
              <h5 class="card-title">{{ annonce.titre}}</h5>
              <p class="card-text">
                <ul id="list">
                  <li>{{annonce.taille}}</li>
                  <li>{{annonce.ville}}</li>
                  <li>{{annonce.prix}}</li>

                </ul>
              </p>

              <div class="card-footer">
                <a href="/locations/{{annonce._id}}" class="btn btn-info btn-block" role="button">
                  Voir</a>
              </div>
            </div>

          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}